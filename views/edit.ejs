<form action="/cards/<%= card._id %>/edit" method="post">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= card.name %>">
    </div>
    <div>
        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= card.description %></textarea>
    </div>
    <div>
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= card.price %>">
    </div>
    <div>
        <label for="releaseDate">Release Date:</label>
        <input type="date" id="releaseDate" name="releaseDate" value="<%= card.releaseDate %>">
    </div>
    <div>
        <label for="productionStatus">Production Status:</label>
        <input type="checkbox" id="productionStatus" name="productionStatus" <%= card.productionStatus ? 'checked' : '' %>>
    </div>
    <div>
        <label for="imageURL">Image URL:</label>
        <input type="text" id="imageURL" name="imageURL" value="<%= card.imageURL %>">
    </div>
    <div>
        <label for="manufacturer">Manufacturer:</label>
        <input type="text" id="manufacturer" name="manufacturer" value="<%= card.manufacturer %>">
    </div>
    <div>
        <label for="recommendedUsage">Recommended Usage:</label>
        <input type="text" id="recommendedUsage" name="recommendedUsage" value="<%= card.recommendedUsage.join(',') %>">
    </div>
    <div>
        <label for="manufacturerId">Manufacturer ID:</label>
        <input type="text" id="manufacturerId" name="manufacturerId" value="<%= card.manufacturerInfo.id %>">
    </div>
    <div>
        <label for="manufacturerName">Manufacturer Name:</label>
        <input type="text" id="manufacturerName" name="manufacturerName" value="<%= card.manufacturerInfo.name %>">
    </div>
    <div>
        <label for="foundedYear">Founded Year:</label>
        <input type="number" id="foundedYear" name="foundedYear" value="<%= card.manufacturerInfo.foundedYear %>">
    </div>
    <div>
        <label for="headquarters">Headquarters:</label>
        <input type="text" id="headquarters" name="headquarters" value="<%= card.manufacturerInfo.headquarters %>">
    </div>
    <div>
        <label for="website">Website:</label>
        <input type="text" id="website" name="website" value="<%= card.manufacturerInfo.website %>">
    </div>
    <div>
        <label for="manufacturerImageURL">Manufacturer Image URL:</label>
        <input type="text" id="manufacturerImageURL" name="manufacturerImageURL" value="<%= card.manufacturerInfo.imageURL %>">
    </div>
    <button type="submit">Save</button>
</form>
